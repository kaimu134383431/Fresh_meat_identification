<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg_background"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/l_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_load_text"
            android:textSize="18sp"
            android:textColor="@android:color/black" /> <!-- テキストの色を設定 -->

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:visibility="visible"
            android:layout_marginTop="16dp"/> <!-- プログレスバーとテキストの間にマージンを追加 -->

        <TextView
            android:id="@+id/progress_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black" /> <!-- テキストのサイズと色を設定 -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
