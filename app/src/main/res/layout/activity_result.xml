<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg_background">

    <!-- 上のガイドライン（上から1/3の位置） -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <!-- 下のガイドライン（下から1/3の位置） -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <!-- カメライメージ -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/guideline_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!-- 結果のパーセント表示 -->
    <TextView
        android:id="@+id/percentage_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新鮮: 0%\n半分新鮮: 0%\n腐敗: 0%"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 肉の状態コメント 1 -->
    <TextView
        android:id="@+id/result1_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="結果がここに表示されます"
        android:textColor="#001F3F"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/percentage_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 肉の状態コメント 2 -->
    <TextView
        android:id="@+id/result2_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="結果がここに表示されます"
        android:textColor="#001F3F"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/result1_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 肉の状態コメント 3 -->
    <TextView
        android:id="@+id/result3_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="結果がここに表示されます"
        android:textColor="#001F3F"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/result2_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 表イメージ -->
    <ImageView
        android:id="@+id/my_image_view"
        android:layout_width="374dp"
        android:layout_height="252dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/pg_table"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>
