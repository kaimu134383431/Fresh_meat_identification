<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pg_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- コンテンツ -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- カメライメージ -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:layout_margin="8dp"
                android:scaleType="centerCrop" />

            <!-- 結果のパーセント表示 -->
            <TextView
                android:id="@+id/percentage_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="@string/default_percentage"
                android:textSize="18sp"
                android:textColor="#000000" />

            <!-- 肉の状態コメント 1 -->
            <TextView
                android:id="@+id/result1_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/result_here"
                android:textColor="#001F3F"
                android:textSize="24sp" />

            <!-- 肉の状態コメント 2 -->
            <TextView
                android:id="@+id/result2_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/result_here"
                android:textColor="#001F3F"
                android:textSize="24sp" />
            <!-- 肉の状態コメント 3 -->
            <TextView
                android:id="@+id/result3_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/result_here"
                android:textColor="#001F3F"
                android:textSize="24sp" />
            <!-- 表イメージ -->
            <ImageView
                android:id="@+id/my_image_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center"
                android:src="@drawable/pg_table" />
            <Button
                android:id="@+id/first_return_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/first_return"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#A27AFF"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.976"
                />
            <Button
                android:id="@+id/end_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/end"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#A27AFF"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.976"
                />
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
